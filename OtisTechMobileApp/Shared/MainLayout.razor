@inherits LayoutComponentBase
@inject NavigationManager navManager;

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@ToggleDrawer" />

    </MudAppBar>
    <MudDrawer @bind-Open="@open" Elevation="1" ClipMode="DrawerClipMode.Never">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">Navigation</MudText>
        </MudDrawerHeader>
        <MudNavMenu>
            <MudNavLink Href="/" OnClick="ToggleDrawer">Index</MudNavLink>
            <MudNavLink Href="/Elevator" OnClick="ToggleDrawer">Elevators</MudNavLink>

        </MudNavMenu>
    </MudDrawer>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>



<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

@code{
    bool open = false;

    void ToggleDrawer()
    {
        open = !open;

    }
    public void RedirectToIndex() => navManager.NavigateTo($"/");
    public void RedirectToElevators() => navManager.NavigateTo($"/Elevator");
}